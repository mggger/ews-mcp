{
  "mcpServers": {
    "ews": {
      "comment": "EWS MCP Server - Pre-built image from GHCR (Recommended) with log volume",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v", "/absolute/path/to/logs:/app/logs",
        "--env-file",
        "/absolute/path/to/.env",
        "ghcr.io/azizmazrou/ews-mcp:latest"
      ]
    },
    "ews-local-build": {
      "comment": "EWS MCP Server - Locally built image with timezone support and logs",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v", "/absolute/path/to/ews-mcp/logs:/app/logs",
        "--env-file",
        "/absolute/path/to/ews-mcp/.env",
        "ews-mcp-server"
      ]
    },
    "ews-local": {
      "comment": "EWS MCP Server - Local Python (development) with full configuration",
      "command": "python",
      "args": ["-m", "src.main"],
      "cwd": "/absolute/path/to/ews-mcp",
      "env": {
        "EWS_SERVER_URL": "https://outlook.office365.com/EWS/Exchange.asmx",
        "EWS_EMAIL": "your.email@company.com",
        "EWS_AUTH_TYPE": "oauth2",
        "EWS_CLIENT_ID": "your-azure-app-client-id",
        "EWS_CLIENT_SECRET": "your-azure-app-secret",
        "EWS_TENANT_ID": "your-azure-tenant-id",
        "TIMEZONE": "UTC",
        "LOG_LEVEL": "INFO",
        "MCP_TRANSPORT": "stdio"
      }
    },
    "ews-basic-auth": {
      "comment": "EWS MCP Server - Basic Authentication (on-premises) with timezone",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "EWS_SERVER_URL=https://mail.company.com/EWS/Exchange.asmx",
        "-e", "EWS_EMAIL=user@company.com",
        "-e", "EWS_AUTH_TYPE=basic",
        "-e", "EWS_USERNAME=user@company.com",
        "-e", "EWS_PASSWORD=your-password",
        "-e", "TIMEZONE=UTC",
        "ews-mcp-server"
      ]
    },
    "ews-timezone-example": {
      "comment": "EWS MCP Server - Example with custom timezone (e.g., Asia/Riyadh, America/New_York, Europe/London)",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "EWS_SERVER_URL=https://outlook.office365.com/EWS/Exchange.asmx",
        "-e", "EWS_EMAIL=your.email@company.com",
        "-e", "EWS_AUTH_TYPE=oauth2",
        "-e", "EWS_CLIENT_ID=your-azure-app-client-id",
        "-e", "EWS_CLIENT_SECRET=your-azure-app-secret",
        "-e", "EWS_TENANT_ID=your-azure-tenant-id",
        "-e", "TIMEZONE=Asia/Riyadh",
        "-e", "LOG_LEVEL=INFO",
        "ghcr.io/azizmazrou/ews-mcp:latest"
      ]
    },
    "ews-http-sse": {
      "comment": "EWS MCP Server - HTTP/SSE transport (for n8n or web clients)",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-p", "8000:8000",
        "-e", "EWS_SERVER_URL=https://outlook.office365.com/EWS/Exchange.asmx",
        "-e", "EWS_EMAIL=your.email@company.com",
        "-e", "EWS_AUTH_TYPE=oauth2",
        "-e", "EWS_CLIENT_ID=your-azure-app-client-id",
        "-e", "EWS_CLIENT_SECRET=your-azure-app-secret",
        "-e", "EWS_TENANT_ID=your-azure-tenant-id",
        "-e", "TIMEZONE=UTC",
        "-e", "MCP_TRANSPORT=sse",
        "-e", "MCP_HOST=0.0.0.0",
        "-e", "MCP_PORT=8000",
        "-e", "LOG_LEVEL=INFO",
        "ghcr.io/azizmazrou/ews-mcp:latest"
      ]
    }
  }
}
